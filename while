#include <cs50.h>
#include <stdio.h>
//comments 


int main(void)
{
    //Greeting user --Print hello and name
    string answer = get_string("what is your name? ");
    printf("Hello, %s", answer);
    
    int counter =0;
    while(counter <9)
    {
        /*   %i is for integer and is to specific the format and location of the variable*/
        printf("counting %i\n", counter);
        
        /*in can be written as: counter = +1, Counter ++, or counter +=1;
        counter += 1;
    }

   
}
